<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ECommerce" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorAccent">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color</item>

        <!--        System ui configuration-->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true
        </item> <!--make content of status bar dark -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true
        </item> <!--make content of navigation bar dark -->
    </style>

    <style name="Theme.ECommerce" parent="Base.Theme.ECommerce" />

    <style name="MainActivityTheme" parent="Theme.ECommerce">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <!--        System ui configuration-->
        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="android:windowLightStatusBar">false
        </item> <!--make content of status bar white -->
        <item name="android:navigationBarColor">@color/primary_color</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

    </style>


    <style name="TitleTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_dark_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DescribeMessageStyle">
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@color/neutral_grey</item>
    </style>

    <style name="EditTextStyle">

        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:paddingStart">@dimen/_16sdp</item>
        <item name="android:paddingEnd">@dimen/_16sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/neutral_grey</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
        <item name="android:textColorHint">@color/neutral_grey</item>
        <item name="hintTextColor">@color/neutral_grey</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="PrimaryButtonStyle">
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/_8sdp</item>
        <item name="android:background">@drawable/primary_button_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="SocialButtonStyle">
        <item name="android:textColor">@color/neutral_grey</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/_16sdp</item>
    </style>

    <style name="MediumTextViewStyle">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>