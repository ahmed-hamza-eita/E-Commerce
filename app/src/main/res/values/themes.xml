<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ECommerce" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorAccent">@color/primary_blue</item>
        <item name="colorPrimaryDark">@color/primary_blue</item>

<!--        System ui configuration-->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item> <!--make content of status bar dark -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item> <!--make content of navigation bar dark -->
    </style>

    <style name="Theme.ECommerce" parent="Base.Theme.ECommerce" />

    <style name="MainActivityTheme" parent="Theme.ECommerce">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <!--        System ui configuration-->
        <item name="android:statusBarColor">@color/primary_blue</item>
        <item name="android:windowLightStatusBar">false</item> <!--make content of status bar white -->
        <item name="android:navigationBarColor">@color/primary_blue</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

    </style>


</resources>